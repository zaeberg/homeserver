:80 {
	# Vaultwarden (Password Manager)
	handle /vault* {
		reverse_proxy homelab-vaultwarden:80
	}

	# Syncthing (File Synchronization)
	handle /sync* {
		reverse_proxy homelab-syncthing:8384
	}

	# Filebrowser (File Management)
	handle /files* {
		reverse_proxy homelab-filebrowser:80
	}

	# Uptime Kuma (Monitoring)
	handle /status* {
		reverse_proxy homelab-uptime-kuma:3001
	}

	# Landing page with links to all services
